-- BaÅŸlangÄ±Ã§ animasyonu (fade + scale)
blur.AnchorPoint = Vector2.new(0.5, 0)
blur.Position = UDim2.new(0.5, 0, 0, 20)
blur.Size = UDim2.new(0.8, 0, 0, 70)
blur.Size = UDim2.new(0.8, 0, 0, 0)
