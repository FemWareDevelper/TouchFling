local tweenIn = TweenService:Create(blur, TweenInfo.new(0.7, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
	Size = UDim2.new(0.8, 0, 0, 70),
	BackgroundTransparency = 0.3
})
tweenIn:Play()

-- 3 saniye bekle
task.wait(3)

-- KapanÄ±ÅŸ animasyonu (fade + scale)
local tweenOut = TweenService:Create(blur, TweenInfo.new(0.7, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
	Size = UDim2.new(0.8, 0, 0, 0),
	BackgroundTransparency = 1
})
